{
  "lm_studio": {
    "base_url": "http://localhost:1234/v1",
    "api_key": "lm-studio"
  },
  "model": {
    "name": "deepseek-coder-v2-lite-instruct-q4_k_s-gguf",
    "temperature": 0.1,
    "max_tokens": 1024,
    "top_p": 0.2,
    "presence_penalty": 0.0,
    "frequency_penalty": 0.0
  },
  "scan": {
    "root_directory": "/path/to/your/repos",
    "extensions": [".py", ".js", ".jsx", ".ts", ".tsx", ".php", ".java", ".go", ".rb", ".sh", ".bash", ".sql", ".cs"],
    "exclude_dirs": [
      "build",
      "node_modules",
      ".git",
      "__pycache__",
      "dist",
      "venv",
      ".venv",
      "env",
      "vendor",
      "cache",
      "coverage",
      ".pytest_cache",
      ".mypy_cache"
    ],
    "save_interval": 10
  }
}

